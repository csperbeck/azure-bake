{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "restriction": {
            "type": "string",
            "defaultValue": "NotAvailableForSubscription",
            "metadata": {
                "description": "Restrictions on the deployment of this resource."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "storageAccesstier": {
            "type": "string",
            "defaultValue": "Hot",
            "allowedValues": [
                "Hot",
                "Cold"
            ],
            "metadata": {
                "description": "Sets the billing tier for the storage."
            }
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageKind": {
            "type": "string",
            "defaultValue": "StorageV2"
        },
        "storageTier": {
            "type": "string",
            "defaultValue": "Standard"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "location": "[parameters('location')]",
            "apiVersion": "2018-02-01",
            "sku": {
                "name": "[parameters('storageAccountType')]",
                "tier": "[parameters('storageTier')]",
                "restrictions": [
                    {
                        "reasonCode": "[parameters('restrictions')]"
                    }
                ]
            },
            "kind": "[parameters('storageKind')]",
            "properties": {
                "accessTier": "[parameters('storagAccessTier')]"
            }
        }
    ]
}