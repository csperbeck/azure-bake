{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { 
        "webapp_name": {
            "type": "string"
        },
        "host_name": {
            "type": "string"
        },
        "app_service_rg": {
            "type": "string"
        },
        "app_service_name": {
            "type": "string"
        },
        "keyvault_rg": {
            "type": "string"
        },
        "keyvault_name": {
            "type": "string"
        },
        "vault_secret_name": {
            "type": "string"
        },
        "cert_name": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resource().location]"
        }
    },
    "variables": {},
    "resources": [
        {
            "type":"Microsoft.Web/certificates",
            "name":"[parameters('cert_name')]",
            "apiVersion":"2016-03-01",
            "location":"[parameters('location')]",
            "properties":{
                "keyVaultId":"[resourceId(parameters('keyvault_rg'),'Microsoft.KeyVault/vaults',parameters('keyvault_name'))]",
                "keyVaultSecretName":"[parameters('vault_secret_name')]",
                "serverFarmId": "[resourceId(parameters('app_service_rg'), 'Microsoft.Web/serverfarms', parameters('app_service_name'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/hostnameBindings",
            "name": "[concat(parameters('webapp_name'), '/', parameters('host_name'))]",
            "apiVersion": "2016-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "siteName": "[parameters('webapp_name')]",
                "azureResourceType": "Website",
                "azureResourceName": "[parameters('webapp_name')]",
                "sslState": "SniEnabled",
                "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', parameters('cert_name'))).Thumbprint]"
            }
        }
    ]
}