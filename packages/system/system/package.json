{
  "name": "azure-bake",
  "description": "Azure cloud deployment platform for both infrasturcture as code and software",
  "author": "HCHB",
  "license": "MIT",
  "version": "0.1.20",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HomecareHomebase/azure-bake.git"
  },
  "bugs": {
    "url": "https://github.com/HomecareHomebase/azure-bake/issues"
  },
  "homepage": "https://github.com/HomecareHomebase/azure-bake",
  "keywords": [
    "azure",
    "azcli",
    "az",
    "deploy",
    "deployment",
    "cloud"
  ],
  "bin": {
    "bake": "dist/index.js"
  },
  "scripts": {
    "release": "tsc -p ../core/src && tsc -p ../ingredient/ingredient-arm/src && tsc -p ../ingredient/ingredient-script/src && tsc -p ../ingredient/ingredient-utils/src && tsc -p ./src && npx lerna publish --conventional-commits --yes",
    "upload": "tsc -p ./src && npm --no-git-tag-version version patch && npm publish --access public",
    "debug-build": "npm install && docker-compose build && tsc -w -p ./src",
    "release-build": "npm run release && docker build . -t bake:release && npm run dockertag",
    "compile": "tsc -p ./src",
    "watch": "tsc -w -p ./src",
    "debug": "node --inspect-brk=0.0.0.0:9229 dist/index.js",
    "start": "node dist/index.js",
    "test": "mocha --timeout 30000 -r ts-node/register test/**/*.ts",
    "dockertag": "node ./dist/dockertag.js"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/colors": "^1.2.1",
    "@types/js-yaml": "^3.11.2",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "chai": "^4.2.0",
    "lerna": "^3.10.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "q": "^1.5.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@azbake/core": "^0.1.17",
    "@azbake/ingredient-utils": "^0.0.15",
    "@azure/arm-resources": "^1.0.0",
    "@azure/ms-rest-nodeauth": "^0.8.3",
    "azcli-npm": "^1.1.3",
    "colors": "^1.3.2",
    "js-yaml": "^3.12.0",
    "minimist": "^1.2.0"
  },
  "main": "dist/index.js"
}
